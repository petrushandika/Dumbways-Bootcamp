<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dumbways</title>
    <link rel="stylesheet" href="../assets/css/styles.css" />
    <link rel="stylesheet" href="../assets/css/responsive.css" />
    <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navbar Menu -->
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid mx-5 text-center">
        <img
          src="../assets/images/dumbways.png"
          class="navbar-brand w-1"
          href="#"
        />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active fw-semibold mx-2"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-semibold" href="/blog">Blog</a>
            </li>
          </ul>
          <button class="btn text-light bg-warning rounded-pill" type="submit">
            <a
              href="/contact"
              class="text-decoration-none text-light"
            >Contact Me</a>
          </button>
        </div>
      </div>
    </nav>

    <!-- Detail Blog -->
    <div class="m-5">
      <h1 class="text-center fs-2">ADD MY BLOG</h1>
      <div class="card card mb-3">
        <img
          src="{{data.image}}"
          class="img-card card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5>{{data.id}}</h5>
          <h5 class="card-title">{{data.title}}</h5>
          <p class="card-text">
            {{data.description}}
          </p>
        </div>
      </div>
    </div>

    <script src="../assets/bootstrap/js/bootstrap.min.js"></script>
    <script
      src="https://kit.fontawesome.com/ebda1b5b9f.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>