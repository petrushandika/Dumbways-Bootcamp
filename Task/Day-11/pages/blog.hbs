<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dumbways</title>
    <link rel="stylesheet" href="assets/css/styles.css" />
    <link rel="stylesheet" href="assets/css/responsive.css" />
    <link href="assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navbar Menu -->
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid mx-5 text-center">
        <img
          src="assets/images/dumbways.png"
          class="navbar-brand w-1"
          href="#"
        />
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active fw-semibold mx-2"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-semibold" href="blog">Blog</a>
            </li>
          </ul>
          <button class="btn text-light bg-warning rounded-pill" type="submit">
            <a href="contact" class="text-decoration-none text-light">Contact Me</a>
          </button>
        </div>
      </div>
    </nav>

    <!-- Form Blog -->
    <div class="m-5">
      <h1 class="text-center fs-2">ADD MY BLOG</h1>
      <form
        method="POST"
        action="/blog"
        class="d-flex flex-column gap-4"
        id="form"
      >
        <!-- Project Name -->
        <div class="">
          <label for="title">Project Name</label>
          <input
            type="text"
            class="form-control bs-1"
            id="title"
            name="title"
          />
        </div>
        <!-- Date -->
        <div class="d-flex gap-3" id="date">
          <div class="w-100">
            <label for="start">Start Date</label>
            <input type="date" class="form-control bs-1" id="start" name="start" />
          </div>
          <div class="w-100">
            <label for="end">End Date</label>
            <input type="date" class="form-control bs-1" id="end" name="end"/>
          </div>
        </div>
        <!-- Description -->
        <div class="">
          <label for="description">Description</label>
          <textarea
            class="form-control bs-1"
            id="description"
            style="height: 150px"
            name="description"
          ></textarea>
        </div>
        <!-- Technologies -->
        <div class="">
          <label for="technologies">Technologies</label>
          <div class="d-flex gap-5">
            <div class="">
              <div class="">
                <input type="checkbox" id="node" class="programming" name="node"/>
                <label for="node">Node JS</label>
              </div>
              <div class="">
                <input type="checkbox" id="react" class="programming" name="react"/>
                <label for="react">React JS</label>
              </div>
            </div>
            <div class="">
              <div class="">
                <input type="checkbox" id="angular" class="programming" name="angular" />
                <label for="angular">Angular</label>
              </div>
              <div class="">
                <input type="checkbox" id="golang" class="programming" name="golang"/>
                <label for="golang">Golang</label>
              </div>
            </div>
          </div>
        </div>
        <!-- Upload File -->
        <div class="input-group mb-3">
          <input type="file" class="form-control bs-1" id="upload" />
          <label class="input-group-text bs-1" for="upload">Upload</label>
        </div>
        <!-- Submit Button -->
        <div class="d-flex justify-content-end">
          <button
            type="submit"
            onclick="addProject(event);"
            class="btn btn-warning text-light rounded-pill"
          >
            Post Blog
          </button>
        </div>
      </form>
    </div>

    <div class="">
      <h1 class="text-center mb-5">MY BLOG</h1>
      <div class="container">
        <div class="d-flex row row-gap-3" id="project">
          {{#each data}}
            <div class="col">
              <div class="card rounded-1" style="width: 18rem">
                <img
                  src="{{image}}"
                  alt="any"
                  class="rounded-top-1"
                />
                <div class="card-body">
                  <div class="">
                    <h5 class="card-title">{{title}}</h5>
                    <span>Duration{{duration}}</span>
                  </div>
                  <p class="card-text">
                    {{description}}
                  </p>
                  <div class="w-100 d-flex gap-3 mb-3">
                    {{node}}
                    {{react}}
                    {{angular}}
                    {{golang}}
                  </div>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-dark text-light w-100">Edit</a>
                    <a href="#" class="btn btn-dark text-light w-100">Delete</a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    {{! <script src="assets/js/blog.js"></script> }}
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script
      src="https://kit.fontawesome.com/ebda1b5b9f.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>